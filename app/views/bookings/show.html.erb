
<div class="booking-info">
  <h2>Booking Information</h2>
  <p>Flight: <%= @booking.flight.departure_airport.code %> to <%= @booking.flight.arrival_airport.code %></p>
  <h3>Passengers:</h3>
  <ul class="passenger-list">
    <% @booking.passengers.each do |passenger| %>
      <li class="passenger-item">
        <strong class="passenger-label">Name:</strong> <%= passenger.name %><br>
        <strong class="passenger-label">Email:</strong> <%= passenger.email %>
      </li>
    <% end %>
  </ul>
</div>
